{
  "name": "exhibit",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "better-auth": "^1.4.9",
      "@tanstack/react-query": "^5.90.12",
      "@prisma/client": "^7.1.0",
      "@polar-sh/better-auth": "^1.1.3",
      "@better-auth/expo": "^1.4.9"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @exhibit/db db:push",
    "db:studio": "turbo -F @exhibit/db db:studio",
    "db:generate": "turbo -F @exhibit/db db:generate",
    "db:migrate": "turbo -F @exhibit/db db:migrate"
  },
  "dependencies": {
    "@exhibit/env": "workspace:*",
    "@sinclair/typebox": "0.27",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "@types/bun": "catalog:",
    "@exhibit/config": "workspace:*"
  },
  "packageManager": "bun@1.2.18"
}
